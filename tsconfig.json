{
  "include": [
      "**/*",
      "**/.server/**/*",
      "**/.client/**/*",
      ".react-router/types/**/*"
  ],
  "compilerOptions": {
      "lib": [
          "DOM",
          "DOM.Iterable",
          "ES2022"
      ],
      "types": [
          "node",
          "vite/client"
      ],
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "bundler",
      "jsx": "react-jsx",
      "rootDirs": [
          ".",
          "./.react-router/types"
      ],
      "baseUrl": "./",
      "paths": {
          "@assets": [
              "app/assets"
          ],
          "@components": [
              "app/components"
          ],
          "@domain": [
              "app/domain"
          ],
          "@hooks": [
              "app/hooks"
          ],
          "@infrastructure": [
              "app/infrastructure"
          ],
          "@routes": [
              "app/routes"
          ],
          "@utils": [
              "app/utils"
          ],
          "@service": [
              "app/service"
          ],
          "@translates": [
              "app/translate"
          ],
          "@types": [
              "app/types"
          ],
          "@/*": [
              "app/*"
          ]
      },
      "typeRoots": [
          "node_modules/@types"
      ],
      "esModuleInterop": true,
      "verbatimModuleSyntax": true,
      "noEmit": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true
  }
}